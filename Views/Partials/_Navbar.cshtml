@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@using Umbraco.Web
@inject UmbracoHelper Umbraco

<!-- header -->
<header>
    <div class="container">
        <img src="~/images/logos/logotype.svg" alt="crito logo">
        <button class="bars"> <i class="fa-solid fa-bars"></i></button>

        <div class="top-menu">
            <div class="contact">
                <div class="info-box">
                    <i class="fa-light fa-phone-volume"></i>
                    +46 (8)121 470 50
                </div>
                <div class="info-box">
                    <i class="fa-regular fa-envelope-dot"></i>
                    info@crito.com
                </div>
                <div class="info-box last">
                    <i class="fa-light fa-location-dot"></i>
                    Sveavägen 31,111 34 STOCKHOLM
                </div>
                <div class="social-media">
                    <a href="" target="_blank"><i class="fa-brands fa-facebook"></i></a>
                    <a href="" target="_blank"><i class="fa-brands fa-twitter"></i></a>
                    <a href="" target="_blank"><i class="fa-brands fa-instagram"></i></a>
                    <a href="" target="_blank"><i class="fa-brands fa-linkedin"></i></a>
                </div>

            </div>
            <div class="bottom-menu">
                <div class="menu-option">
                    @{
                        var root = Umbraco.ContentAtRoot().FirstOrDefault();
                        if (root != null)
                        {
                            var menuItems = root.Children.Where(x => x.IsVisible()).ToList();
                            foreach (var item in menuItems)
                            {
                                <a href="@item.Url()">@item.Name</a>
                            }
                        }
                    }
                </div>
                <div>
                    <button class="btn btn-primary" type="submit">login&nbsp;<i class="fa-regular fa-arrow-up-right"></i></button>
                </div>
            </div>
        </div>
    </div>
</header>
